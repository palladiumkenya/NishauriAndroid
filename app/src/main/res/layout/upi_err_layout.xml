<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.40"
        android:gravity="left"
        android:textStyle="bold"
        android:text="CCC Number"
        android:padding="5dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/ccnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="CCC number"
        android:textSize="13sp" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="28dp"
android:orientation="horizontal"
android:weightSum="3">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.39"
    android:gravity="left"
    android:textStyle="bold"

    android:padding="5dp"
    android:text="UPI Number"
    android:textSize="13sp" />

<TextView
    android:id="@+id/upi"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="left"
    android:padding="5dp"
    android:text="UPI Number"
    android:textSize="13sp" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="32dp"
android:orientation="horizontal"
android:weightSum="3">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.39"
    android:gravity="left"
    android:textStyle="bold"
    android:padding="5dp"
    android:text="Name"
    android:textSize="13sp" />

<TextView
    android:id="@+id/Clientname"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="left"
    android:padding="5dp"
    android:text="Name"
    android:textSize="13sp" />

</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="28dp"
android:orientation="horizontal"
android:visibility="gone"
android:weightSum="3">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.38"
    android:gravity="left"
    android:textStyle="bold"

    android:padding="5dp"
    android:text="Phone"
    android:textSize="13sp" />

<TextView
    android:id="@+id/phone"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="left"
    android:padding="5dp"
    android:text="Phone"
    android:textSize="13sp" />

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="28dp"
android:orientation="horizontal"
android:visibility="gone"
android:weightSum="3">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.39"
    android:gravity="left"
    android:padding="5dp"
    android:textStyle="bold"

    android:text="File Serial Number"
    android:textSize="13sp" />

<TextView
    android:id="@+id/fileserial"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="left"
    android:padding="5dp"
    android:text="File serial number"
    android:textSize="13sp" />

</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:weightSum="4">


<Button
    android:id="@+id/confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:background="@drawable/mybutton"
    android:gravity="center"
    android:padding="5dp"
    android:text="Confirm"
    android:textSize="13sp" />



</LinearLayout>

</LinearLayout>