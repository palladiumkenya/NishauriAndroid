<?xml version="1.0" encoding="utf-8"?>
<!--Adding Badge (Item Count)/Notification Count to Android Button-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:id="@+id/title">

                <ImageView
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="0dp"
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/nascoplogo"
                    />

            </LinearLayout>


<!-- start here  -->
            <Button
                android:id="@+id/appointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/appointment_diary"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/defaulters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/defaulter_diary"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/pmtct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/pmtct"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/mlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/mlab"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/web_dashboard"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/report"
                android:textColor="#ffffff" />



            <Button
                android:id="@+id/wellnessMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:text="@string/wellness_responses"
                android:textColor="#ffffff" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
<!-- part 2 -->


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/spacing_xlarge"
                    android:layout_marginRight="@dimen/spacing_xlarge"
                    app:cardBackgroundColor="@color/grey_10"
                    app:cardCornerRadius="40dp"
                   android:visibility="gone"
                    app:cardElevation="3dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/spacing_xsmall"
                        android:src="@drawable/nascoplogo"
                        app:civ_border="false"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:background="@android:color/white"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/spacing_large"
                        android:paddingTop="@dimen/spacing_large">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_smlarge"
                            android:layout_marginRight="@dimen/spacing_smlarge"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome to"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                app:fontFamily="sans-serif-medium" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/spacing_large"
                                    android:layout_height="@dimen/spacing_large"
                                    android:layout_marginEnd="@dimen/spacing_medium"
                                    android:layout_marginRight="@dimen/spacing_medium"
                                    app:srcCompat="@drawable/ic_hiv" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ushauri platform"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="@color/grey_40" />


                            </LinearLayout>




                           <TextView
                               android:id="@+id/helpContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help desk contact: 0800722440"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="#00ced1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/spacing_large"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:background="@color/grey_5" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_mlarge"
                            android:layout_marginRight="@dimen/spacing_mlarge"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/appointment_diary"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            app:srcCompat="@drawable/ic_appointment"
                                            android:scaleType="centerInside" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="APPOINTMENT DIARY"
                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"

                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Manage appoitments"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"
                                                    />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/defaulter_diary"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            app:srcCompat="@drawable/ic_defaulter"
                                            android:scaleType="centerInside" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="DEFAULTER DIARY"
                                                    android:textColor="@color/grey_90"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"/>

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Manage Defaulters"


                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"
                                                    />

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/pmtct_menu"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            app:srcCompat="@drawable/ic_mother"
                                            android:scaleType="centerInside" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="PMTCT"


                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"
                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Mother-child transmission prevention"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/mlab_menu"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            app:srcCompat="@drawable/ic_mlab"
                                            android:scaleType="centerInside" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="M-LAB"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"
                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Open M-Lab app"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">



                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/dashboard"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            app:srcCompat="@drawable/ic_dashboard"
                                            android:scaleType="centerInside" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="WEB DASHBOARD"
                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"
                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Open ushauri dashboard"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/wellness_menu"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            android:scaleType="centerInside"
                                            app:srcCompat="@drawable/ic_healthcare" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="WELLNESS"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"
                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Wellness responses"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/edit_appointments"
                                    android:layout_margin="@dimen/spacing_medium"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="80dp"
                                            android:paddingTop="@dimen/spacing_large"
                                            android:scaleType="centerInside"
                                            app:srcCompat="@drawable/ic_schedule" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/spacing_large">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:maxLines="1"
                                                    android:singleLine="true"
                                                    android:text="RESCHEDULE"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="8sp"
                                                    android:autoSizeMaxTextSize="11sp"
                                                    android:textColor="@color/grey_90" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Edit/reschedule appointments"

                                                    android:autoSizeTextType="uniform"
                                                    android:autoSizeMinTextSize="10sp"
                                                    android:autoSizeMaxTextSize="13sp"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/spacing_large"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:background="@color/grey_5" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>

