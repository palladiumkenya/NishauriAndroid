<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pmtct.PNCVisitStart">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Baby's DOB-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/BabyDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Visit"
                    android:focusable="false"
                    android:textColorHint="#000"
                    />
            </com.google.android.material.textfield.TextInputLayout>



        <!-- pnc visit/clinic-->

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/pnclayout11">-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pncVlay">

        <EditText
            android:id="@+id/PNC_VisitNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PNC Visit Number:*"
            android:inputType="number"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pncClay">

        <EditText
            android:id="@+id/PNC_ClinicNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PNC Clinic Number:*"
            android:inputType="text"
            android:maxLength="24"
            android:textColorHint="#000" />
    </com.google.android.material.textfield.TextInputLayout>




            <!-- </LinearLayout>-->

        <!-- L and D layout -->

            <!-- fp cousel -->
            <!-- baby's sex -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Client Counselled on Postparturm FP?" />

                <Spinner
                    android:id="@+id/FPS"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp" />

            </LinearLayout>

            <!-- baby's sex -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="FP Methods" />

                <Spinner
                    android:id="@+id/babySex"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp" />

            </LinearLayout>

    <Button
        android:id="@+id/btn_submit_reg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:fontFamily="serif"
        android:text="Save"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>